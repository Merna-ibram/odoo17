<odoo>
  <record id="view_task_line_tree" model="ir.ui.view">
    <field name="name">todo.task.line.tree</field>
    <field name="model">todo.task.line</field>
    <field name="arch" type="xml">
      <tree string="Task Timesheets">
        <field name="task_id"/>
        <field name="user_id"/>
        <field name="time_spent"/>
      </tree>
    </field>
  </record>

  <record id="view_task_line_form" model="ir.ui.view">
    <field name="name">todo.task.line.form</field>
    <field name="model">todo.task.line</field>
    <field name="arch" type="xml">
      <form string="Task Timesheet">
        <group>
          <field name="task_id"/>
          <field name="user_id"/>
          <field name="time_spent"/>
        </group>
      </form>
    </field>
  </record>

  <!-- Action -->
  <record id="action_task_line" model="ir.actions.act_window">
    <field name="name">Task Timesheets</field>
    <field name="res_model">todo.task.line</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Menu item -->
    <menuitem
        id="task_line_menu_item"
        name="Task Timesheets"
        parent="todo_menu"
        action="action_task_line"

    />
</odoo>